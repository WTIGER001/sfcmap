{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "attach",
            "name": "Launch Chrome",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceFolder}",
            "sourceMapPathOverrides": {
              "webpack:/./*": "${webRoot}/*",
              "webpack:/src/*": "${webRoot}/src/*",
              "webpack:/*": "*",
              "webpack:/./~/*": "${webRoot}/node_modules/*"
            }
        }
    ]
}